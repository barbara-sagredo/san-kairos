        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//creo las variables suma promedio y contador	
	var suma=0;
	var montoTotal=current.u_slx_os.u_slx_monto_clp;
	
	//creo Glide record apuntando a entregable
	var gr= new GlideRecord('x_hocsa_san_ficha_de_proyecto'); 
	gr.addQuery('u_slx_os',current.u_slx_os );
	gr.query();
	
	while (gr.next()) {

    suma += gr.u_slx_monto_total_venta;

}
	
	var os = new GlideRecord('x_hocsa_san_ficha_os');
	os.addQuery('sys_id',current.u_slx_os);
	os.query();
	
	while(os.next())
		{
	os.u_slx_suma_hco=suma;
	os.update();
		}
	//En caso de que la suma de las HCO sea mayor al monto de OS
	if(suma>montoTotal)
	{
	current.u_slx_hco_mayor=true;
	current.update();
	
	}else {
            current.u_slx_hco_mayor = false;
            current.update();
        }
	

})(current, previous);]]></script>
